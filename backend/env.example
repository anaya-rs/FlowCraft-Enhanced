# FlowCraft AI - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=FlowCraft AI
APP_VERSION=1.0.0
APP_ENV=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true  # Set to false in production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./flowcraft.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/flowcraft
# For MySQL (production):
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/flowcraft

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256

# Password Security
BCRYPT_ROUNDS=12

# =============================================================================
# OCR & AI CONFIGURATION
# =============================================================================
# OCR Engine Settings
OCR_ENGINE=easyocr  # easyocr, tesseract, or hybrid
TESSERACT_PATH=/usr/bin/tesseract  # Path to tesseract executable
EASYOCR_LANGUAGES=en  # Comma-separated language codes

# AI Model Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi-3  # Default model to use
AI_TIMEOUT=300  # AI processing timeout in seconds

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,bmp,tiff
TEMP_DIR=./temp

# =============================================================================
# EXPORT & INTEGRATION
# =============================================================================
# Export Settings
EXPORT_FORMATS=json,csv,pdf,excel
EXPORT_DIR=./exports

# Webhook Settings
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# API Settings
API_RATE_LIMIT=100  # Requests per minute
API_TIMEOUT=30

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_FILE=./logs/flowcraft.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Redis (for caching and session storage)
# REDIS_URL=redis://localhost:6379/0

# Email Service (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only set these in development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOW_CREDENTIALS=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Uncomment and configure for production
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem
# PROXY_HEADERS=true
# FORWARDED_ALLOW_IPS=127.0.0.1,::1
